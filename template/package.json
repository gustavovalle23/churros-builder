{
  "name": "churros-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": "false",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "DEBUG=app:* node dist/main",
    "start:kafka:dev": "nest start --watch --entryFile=main-kafka",
    "start:kafka:prod": "DEBUG=app:* node dist/main-kafka",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prettier": "prettier --write .",
    "audit:prettier": "prettier --check .",
    "audit:lint": "eslint .",
    "audit:ts": "yarn build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --runInBand --detectOpenHandles --forceExit --config ./test/jest-e2e.json",
    "test:e2e:cov": "jest --coverage --runInBand --detectOpenHandles --forceExit --config ./test/jest-e2e.json ",
    "prepare": "husky install",
    "artifactregistry-login": "artifactregistry-auth"
  },
  "dependencies": {
    "@apollo/federation": "^0.33.9",
    "@apollo/subgraph": "^0.1.5",
    "@graphql-tools/utils": "^8.6.1",
    "@nestjs/apollo": "^10.0.4",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.0.4",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/platform-express": "^9.0.0",
    "apollo-server-express": "^3.10.2",
    "axios": "^0.25.0",
    "axios-mock-adapter": "^1.20.0",
    "graphql": "^15",
    "kafkajs": "^2.2.3",
    "mongoose": "^6.1.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@apollo/rover": "^0.4.1",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.0.3",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "29.0.3",
    "jest-mock-extended": "^2.0.4",
    "mockdate": "^3.0.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "./node_modules/.bin/eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/test/(.*)$": "<rootDir>/test/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
